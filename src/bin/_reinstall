#!/usr/bin/env python3

import os
import jeffos
import click

@click.command()
@click.option('-bin', default=False, is_flag=True,
help="reinstalls only the /sys/bin/ binaries")
def main(bin):
    """reinstalls the system"""
    path = jeffos.OS_PATH+"../"
    args = ""
    if bin:
        args += "-bin"
    os.system(f"cd {path} && python install.py {args}")


if __name__ == "__main__":
    main()