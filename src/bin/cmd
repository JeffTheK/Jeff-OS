#!python

import os

def run_app(path):
    file = open(path)
    text = file.read()
    if text.startswith("#!python"):
        exec(text)
    else:
        print("can't run")

def main():
    print("launching command line")
    print("type help for basic info")

    i = ""
    while i != "exit" or i != "quit":
        i = input("cmd>")
        if os.path.isfile("sys/bin/"+i):
            run_app("sys/bin/"+i)
        else:
            print(f"app '{i}' not found")

if __name__ == "__main__":
    main()