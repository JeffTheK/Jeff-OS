#!/usr/bin/env python3

import os
import sys
import jeffos
import subprocess
import signal
import re
import tty
import termios
from datetime import datetime
from jeffos.color import colored, OK

_aliases = { }

_background_processes = {}

_is_running = True

fd = sys.stdin.fileno()
_tty_original_settings = termios.tcgetattr(fd)

def parse_cfg():
    print(OK+"parsing cmd.cfg")
    global _aliases

    tokens = []
    cfg = open(jeffos.OS_PATH+"sys/var/cmd.cfg", 'r')
    lines = cfg.readlines()
    lines.pop(0)
    text = "".join(lines)

    commands = re.split(r";\n", text)
    for cm in commands:
        tokens = re.findall(r"\w+|=|'.*'", cm)
        if tokens[0] == "alias":
            tokens[3] = tokens[3].replace("'", '')
            _aliases[tokens[1]] = tokens[3]

    cfg.close()

def handle_signal(signum, frame):
    global _is_running
    print(OK+"ctrl-c was pressed")
    print("press enter")
    _is_running = False

signal.signal(signal.SIGINT, handle_signal)

# FIXME: doesn't work, since we don't save output
# looks for special messages designed for command line
def look_for_messages(output):
    if "$PRINT_aliases" in output:
        print(_aliases)
    if "$PRINT_background_processes" in output:
        print(_background_processes)
    return output

def run_app(path, args):
    if args != "":
        args = args.split(" ")
    else:
        args = []
    subprocess.call([path] + args)
    # reload working dir
    os.chdir(jeffos.getcwd())

def run_app_in_background(path, args):
    p = subprocess.Popen([path] + args.split(" "))
    index = str(len(_background_processes))
    _background_processes[path+'['+index+']'] = p

def did_you_mean(app_name):
    apps_path = jeffos.OS_PATH+"sys/bin/"
    files = os.listdir(apps_path)
    jeffos.did_you_mean(app_name, files)

def parse_input(i, history):
    if not _is_running:
        return

    look_for_messages(i)

    args = i.split(" ")
    app_name = args[0]
    args.pop(0)
    if app_name in _aliases.keys():
        app_name = _aliases[i]
    args = " ".join(args)

    history.write(i+"\n")

    if os.path.isfile(jeffos.OS_PATH+"/sys/bin/"+app_name):
        if len(args) != 0 and args[-1] == "&":
            args.replace("&", "")
            run_app_in_background(jeffos.OS_PATH+"/sys/bin/"+app_name, args)
        else:
            run_app(jeffos.OS_PATH+"/sys/bin/"+app_name, args)
    elif i == "exit" or i == "quit":
        return False
    else:
        # app not found
        i = colored(i, "blue")
        print(f"app '{i}' not found")
        did_you_mean(app_name)

def exit():
    global _is_running
    _is_running = False
    print(OK+"closing terminal")

def reboot():
    print(OK+"rebooting")
    exit()
    subprocess.call(jeffos.OS_PATH+"boot.py")

_input_str = ""

def on_enter(inp, history):
    tty.tcsetattr(fd, termios.TCSADRAIN, _tty_original_settings)

    inp = inp.strip()
    if inp == "":
        return
    elif inp == "quit" or inp == "exit":
        exit()
    elif inp == "reboot":
        reboot()
    else:
        parse_input(inp, history)

    tty.setraw(fd)

_cursor_x = 0

def read_stdin(prompt, history):
    global _input_str
    global _cursor_x

    c = sys.stdin.read(1)
    if c == '\033': # holds several bytes
        sys.stdin.read(1)
        b = sys.stdin.read(1)
        if b == 'A': # arrow up
            print("ARROW_UP")
    elif c == '\x0d': # enter
        sys.stdout.write("\033[100D")
        print()
        on_enter(_input_str, history)
        sys.stdout.write("\033[100D")
        _input_str = ""
        print(prompt, end="")
        _cursor_x = len(jeffos.get_current_user()+"@"+"cmd>")
    elif c == '\x7f': # backspace
        if _cursor_x <= len(jeffos.get_current_user()+"@"+"cmd>"):
            return
        _input_str = _input_str[0:-2]
        _cursor_x -= 1
        sys.stdout.write('\b \b')
    else:
        _cursor_x += 1
        _input_str += c
        sys.stdout.write(c)
    sys.stdout.flush()

def main():
    print(OK+"launching command line")
    parse_cfg()
    print("you are "+colored(jeffos.get_current_user(), "cyan"))
    print("type help for basic info")

    os.chdir(jeffos.OS_PATH)

    history = open(jeffos.OS_PATH+"usr/cmd_history.txt", "a")
    history.write("starting session "+datetime.now().strftime("%d-%m-%Y %H:%M")+"\n")

    tty.setraw(sys.stdin.fileno())

    prompt = colored(jeffos.get_current_user(), "red")+"@"+colored("cmd>", "yellow")
    global _cursor_x
    _cursor_x = len(jeffos.get_current_user()+"@"+"cmd>")
    print(prompt, end="")
    global _is_running
    while _is_running:
        read_stdin(prompt, history)
        #inp = input(prompt)
        #inp = inp.strip()
        #if inp == "":
        #    continue
        #elif inp == "quit" or inp == "exit":
        #    exit()
        #elif inp == "reboot":
        #    reboot()
        #else:
        #    parse_input(inp, history)

    history.close()

if __name__ == "__main__":
    main()