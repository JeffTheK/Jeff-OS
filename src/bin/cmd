#!python

import os

def run_app(path, args):
    file = open(path)
    text = file.read()
    if text.startswith("#!python"):
        os.system("python "+path+" "+args)
    else:
        print("can't run")

def main():
    print("launching command line")
    print("type help for basic info")

    i = ""
    while i != "exit" or i != "quit":
        i = input("cmd>")
        args = i.split(" ")
        app_name = args[0]
        if os.path.isfile("sys/bin/"+app_name):
            args = " ".join(args)
            run_app("sys/bin/"+app_name, args)
        else:
            print(f"app '{i}' not found")

if __name__ == "__main__":
    main()