#!python

import os
import sys

os_path = ""
current_dir = ""

OS_PATH = "HAIII"

def run_app(path, args):
    file = open(path)
    text = file.read()
    sys.argv = args
    args.insert(0, "")
    if text.startswith("#!python"):
        exec(text)
    else:
        print("can't run")

def main():
    print("launching command line")
    print("type help for basic info")

    os.chdir("Jeff-OS/")
    sys.path.pop(0)
    sys.path.insert(0, os.getcwd()+"/sys/lib/")
    global OS_PATH
    OS_PATH = os.getcwd()

    i = ""
    while i != "exit" or i != "quit":
        i = input("cmd>")
        args = i.split(" ")
        app_name = args[0]
        if os.path.isfile("sys/bin/"+app_name):
            run_app("sys/bin/"+app_name, args)
        else:
            print(f"app '{i}' not found")

if __name__ == "__main__":
    main()