#!/usr/bin/env python3

import os
import click
import jeffos

@click.command()
@click.argument("username")
def main(username):
    """creates new user"""
    user_path = jeffos.OS_PATH+"usr/"+username
    os.mkdir(user_path)
    os.mkdir(user_path+"/bin/")
    os.mkdir(user_path+"/lib/")
    os.mkdir(user_path+"/var/")

if __name__ == "__main__":
    main()