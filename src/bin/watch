#!/usr/bin/env python3

import sys
import jeffos

def main():
    period = sys.argv[2]
    app = sys.argv[3]

    try:
        while True:
            jeffos.run_system_app(app, [])
            jeffos.run_system_app("sleep", [period])
    except:
        print("ok")

if __name__ == "__main__":
    main()